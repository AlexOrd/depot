<p id="notice"><%= notice %></p>

<h1 align="center">Список товаров</h1>

<table>
<% @products.each do |product| %> 
 <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
 
 <td>
 <%= image_tag(product.image_url, class: 'list_image') %>
 </td>

 <td class="list_description">
 <dl>
 <dt><%= product.title %></dt>
 <dd><%= truncate(strip_tags(product.description),
 length: 80) %></dd>
 </dl>
 </td>

 <td class="list_actions">
 <%= link_to 'Подробно', product %><br/>
 <%= link_to 'Изменить', edit_product_path(product) %><br/>
 <%= link_to 'Удалить', product, method: :delete,
 data: { confirm: 'Вы уверены?' } %>
 </td>
 </tr>
<% end %>
</table>

<br />

<a class="btn btn-warning btn-lg btn-block" text-align= "center" href="<%= new_product_path %>" role="button">Создать новый продукт</a>


